<body>
  <div class="gradient-wrap"></div>
  <div class="stage">
    <div class="card" role="region" aria-label="Secret box">
      <h1>Hey Doofus ‚Äî Secret surprise</h1>
      <p class="lead">Enter the passcode to unlock</p><div class="pass-input" id="passArea">
    <input id="pass" type="password" placeholder="Enter passcode" aria-label="passcode" autocomplete="one-time-code" />
    <button id="unlockBtn" class="btn">Unlock</button>
    <button id="hintBtn" class="btn secondary" title="Hint">Hint</button>
  </div>

  <p class="hint">Tip: it's a number you both know üòâ</p>

  <div id="reveal" class="reveal" aria-hidden="true">
    <div class="glass-box">
      <div class="message" id="mainMessage">
        <!-- message will be injected here -->
      </div>
      <div class="footer">
        <div class="signature">‚Äî <span class="spark">Yours, Bhakkk üíï</span></div>
      </div>
    </div>
  </div>

</div>

  </div>  <!-- audio (kept muted; will play only after unlock) -->  <audio id="bgAudio" loop preload="auto">
    <!-- REPLACE the src with an accessible instrumental URL or file name (e.g. 'romantic.mp3').
         If you host on CodePen, add an external audio URL in the HTML panel or via settings. -->
    <source src="music.mp3" type="audio/mpeg">
  </audio>  <script>
    (function(){
      // CONFIG: change these to modify the page
      const PASSCODE = '31101703'; // keep as string
      const MAIN_TEXT = `Hey Doofus, here is your surprise üòè\n\nMade with \u2764\ufe0f by Bhakkk for Doofus.`.replace(/\\n/g,'<br>');

      // elements
      const pass = document.getElementById('pass');
      const unlockBtn = document.getElementById('unlockBtn');
      const hintBtn = document.getElementById('hintBtn');
      const reveal = document.getElementById('reveal');
      const mainMessage = document.getElementById('mainMessage');
      const audio = document.getElementById('bgAudio');

      // helper: reveal message
      function revealMessage(){
        mainMessage.innerHTML = MAIN_TEXT;
        reveal.classList.add('show');
        reveal.setAttribute('aria-hidden', 'false');
        // start audio (unmuted) only after user action
        try{ audio.currentTime = 0; audio.play().catch(()=>{/* autplay blocked: user will need to tap play */}); }
        catch(e){}
      }

      // check passcode
      function check(){
        const val = pass.value.trim();
        if(!val) return; // ignore empty
        if(val === PASSCODE){
          revealMessage();
          // small celebration animation
          unlockBtn.disabled = true;
          pass.disabled = true;
        } else {
          pass.value = '';
          pass.placeholder = 'Wrong code ‚Äî try again';
          pass.focus();
          // subtle shake
          document.querySelector('.card').animate([
            { transform: 'translateX(0)' },
            { transform: 'translateX(-6px)' },
            { transform: 'translateX(6px)' },
            { transform: 'translateX(0)' }
          ], { duration: 280, easing:'ease-out' });
        }
      }

      unlockBtn.addEventListener('click', check);
      pass.addEventListener('keydown', function(e){ if(e.key === 'Enter') check(); });

      hintBtn.addEventListener('click', function(){
        // friendly hint modal ‚Äî keep playful
        hintBtn.textContent = 'It\'s 8 digits üòâ';
        setTimeout(()=> hintBtn.textContent = 'Hint', 2000);
      });

      // if audio file isn't available, show small console note
      audio.addEventListener('error', ()=>{
        console.info('Audio source not found. Replace <audio> source with an accessible mp3 URL or upload your file.');
      });

      // Accessibility: focus on input initially
      window.addEventListener('load', ()=>{ pass.focus(); });

    })();
  </script></body>
